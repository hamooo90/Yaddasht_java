<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pallet1"

    tools:context=".view.PrivacyActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            style="@style/Widget.MaterialComponents.Toolbar.Primary"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/pallet1"
            app:navigationIcon="@drawable/ic_back_rtl"
            app:title="سیاست حفظ حریم‌خصوصی" />

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:justificationMode="inter_word"
                android:paddingHorizontal="10dp"
                android:paddingBottom="10dp"
                android:text="این متن به منظور مطلع کردن کاربران از سیاست‌های یادداشت در مورد جمع‌آوری اطلاعات شخصی است."
                android:textAlignment="textStart"
                android:textColor="@color/white"

                android:textSize="15sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:justificationMode="inter_word"
                android:paddingHorizontal="10dp"
                android:paddingBottom="10dp"
                android:text="برنامه یادداشت توسط حامد واخیده به عنوان یک برنامه رایگان طراحی شده و این سرویس بدون هیچ هزینه ای ارائه می شود."
                android:textAlignment="textStart"
                android:textColor="@color/white"

                android:textSize="15sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:justificationMode="inter_word"
                android:paddingHorizontal="10dp"
                android:paddingBottom="10dp"
                android:text="کاربر در صورت استفاده از یادداشت با جمع‌آوری اطلاعات با توجه به سیاست‌های حریم خصوصی موافقت می‌کند. اطلاعات جمع‌آوری شده به منظور ارائه و بهبود خدمات استفاده می‌شود. همچنین این اطلاعات با کسی به اشتراک گذاشته نمی‌شود و استفاده نمی‌شود مگر اینکه در این سیاست‌ها شرح داده شده باشد."
                android:textAlignment="textStart"
                android:textColor="@color/white"

                android:textSize="15sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:justificationMode="inter_word"
                android:paddingHorizontal="10dp"
                android:paddingBottom="10dp"
                android:paddingTop="15dp"
                android:text="جمع آوری و استفاده از اطلاعات"
                android:textAlignment="textStart"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="18sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:justificationMode="inter_word"
                android:paddingHorizontal="10dp"
                android:paddingBottom="10dp"
                android:text="برای داشتن تجربه بهتر و استفاده از قابلیت ذخیره سازی یادداشت‌ها در سرور، نیاز به اطلاعات قابل شناسایی شخصی از جمله نام و آدرس ایمیل داریم. و همچنین به منظور دسترسی به یادداشت‌ها در چند دستگاه، نیاز به ذخیره شدن آنها در سرور وجود دارد."
                android:textAlignment="textStart"
                android:textColor="@color/white"

                android:textSize="15sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:justificationMode="inter_word"
                android:paddingHorizontal="10dp"
                android:paddingBottom="10dp"
                android:text="برای استفاده از قابلیت بارکد خوان نیاز به دسترسی به دوربین وجود دارد. تمام اطلاعات دریافتی از دوربین در دستگاه کاربر ذخیره می‌شود و هیچ اطلاعات از دوربین در سرور ذخیره نمی‌شود."
                android:textAlignment="textStart"
                android:textColor="@color/white"

                android:textSize="15sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:justificationMode="inter_word"
                android:paddingHorizontal="10dp"
                android:paddingBottom="10dp"

                android:text="امنیت"
                android:textAlignment="textStart"
                android:textColor="@color/white"

                android:paddingTop="15dp"
                android:textSize="18sp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:justificationMode="inter_word"
                android:paddingHorizontal="10dp"
                android:paddingBottom="10dp"
                android:text="اعتماد شما در ارائه اطلاعات شخصی خود به من بسیار ارزشمند است، بنابراین در تلاش هستیم تا از ابزارهای قابل قبول تجاری برای محافظت از آنها استفاده کنیم. تمامی یادداشت‌ها در سرور به صورت کد شده ذخیره می‌شوند و این اطلاعات توسط طراح برنامه قابل بررسی نیست. با این حال به یاد داشته باشید که هیچ روش انتقال از طریق اینترنت یا روش ذخیره سازی الکترونیکی ۱۰۰٪ مطمئن و قابل اعتماد نیست و من نمی توانم امنیت مطلق آن را تضمین کنم."
                android:textAlignment="textStart"
                android:textColor="@color/white"

                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:justificationMode="inter_word"
                android:paddingHorizontal="10dp"
                android:paddingBottom="10dp"
                android:text="تغییرات در سیاست حفظ حریم خصوصی"
                android:textAlignment="textStart"
                android:textColor="@color/white"

                android:paddingTop="15dp"
                android:textSize="18sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:justificationMode="inter_word"
                android:paddingHorizontal="10dp"
                android:paddingBottom="10dp"
                android:text="ممکن است سیاست حفظ حریم خصوصی در آینده به روز شود. بنابراین به شما توصیه می شود که برای بررسی هرگونه تغییر صفحه سیاست حفظ حریم خصوصی  را به صورت دوره ای مرور کنید."
                android:textAlignment="textStart"
                android:textColor="@color/white"

                android:textSize="15sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:justificationMode="inter_word"
                android:paddingHorizontal="10dp"
                android:paddingBottom="10dp"
                android:text="تماس با من"
                android:textAlignment="textStart"
                android:textColor="@color/white"

                android:paddingTop="15dp"
                android:textSize="18sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:justificationMode="inter_word"
                android:paddingHorizontal="10dp"
                android:paddingBottom="10dp"
                android:text="در صورت وجود هرگونه پیشنهاد یا سوال با من تماس بگیرید"
                android:textAlignment="textStart"
                android:textColor="@color/white"

                android:textSize="15sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:justificationMode="inter_word"
                android:paddingHorizontal="10dp"
                android:paddingBottom="10dp"
                android:text="حامد واخیده"
                android:textAlignment="textStart"
                android:textColor="@color/white"

                android:textSize="15sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:justificationMode="inter_word"
                android:paddingHorizontal="10dp"
                android:paddingBottom="10dp"
                android:text="hamedvakhide@gmail.com"
                android:textAlignment="textStart"
                android:textColor="@color/white"

                android:textStyle="bold"
                android:textSize="15sp" />





        </LinearLayout>


    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>